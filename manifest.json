{
  "manifest_version": 3,
  "name": "Buddy Translate",
  "version": "1.0",
  "description": "Translate selected text using a popup.",
  "options_page": "options.html",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/translate-icon.png",
      "48": "images/translate-icon.png",
      "128": "images/translate-icon.png"
    }
  },
  "icons": {
    "16": "images/translate-icon.png",
    "48": "images/translate-icon.png",
    "128": "images/translate-icon.png"
  },
"content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/translate-icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
